# Production Environment Variables Example
# Copy this file to .env.production and update the values

# Database
DATABASE_URL="your-production-database-url"

# Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="your-production-clerk-publishable-key"
CLERK_SECRET_KEY="your-production-clerk-secret-key"

# Application URL (IMPORTANT: Change this to your production domain)
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# API Keys
OPENAI_API_KEY="your-production-openai-api-key"
GOOGLE_API_KEY="your-production-google-api-key"

# Payment
STRIPE_PUBLIC_KEY="your-production-stripe-public-key"
STRIPE_SECRET_KEY="your-production-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-production-stripe-webhook-secret"

# Node Environment
NODE_ENV="production"

# Vercel Cron Job Security
CRON_SECRET="your-production-cron-secret-key"

# Other production-specific variables...